# Environment Configuration for RA-D-PS
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# =====================================================================
# DATABASE CONFIGURATION
# =====================================================================

# PostgreSQL connection settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ra_d_ps_db
POSTGRES_USER=ra_d_ps_user
POSTGRES_PASSWORD=changeme_secure_password

# Full database URL (alternative to individual settings)
DATABASE_URL=postgresql://ra_d_ps_user:changeme_secure_password@localhost:5432/ra_d_ps_db

# =====================================================================
# APPLICATION CONFIGURATION
# =====================================================================

# Environment: development, staging, production
APP_ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# File storage paths
UPLOAD_DIR=./uploads
PROFILE_DIR=./profiles
LOG_DIR=./logs

# =====================================================================
# API CONFIGURATION (for Phase 9)
# =====================================================================

# API server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# API authentication (when implemented)
API_SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =====================================================================
# PGADMIN CONFIGURATION (optional)
# =====================================================================

PGADMIN_EMAIL=admin@ra-d-ps.local
PGADMIN_PASSWORD=admin

# =====================================================================
# PROFILE SETTINGS
# =====================================================================

# Whether to use database for profile storage (true) or file system (false)
USE_DATABASE_FOR_PROFILES=false

# Default profile for unknown XML formats
DEFAULT_XML_PROFILE=generic_xml_passthrough

# =====================================================================
# BATCH PROCESSING
# =====================================================================

# Maximum concurrent file processing
MAX_WORKERS=4

# Batch size for database inserts
BATCH_INSERT_SIZE=100

# Processing timeout (seconds)
PROCESSING_TIMEOUT=300

# =====================================================================
# FEATURE FLAGS
# =====================================================================

# Enable entity extraction
ENABLE_ENTITY_EXTRACTION=true

# Enable full-text search indexing
ENABLE_FULLTEXT_INDEXING=true

# Enable profile inheritance
ENABLE_PROFILE_INHERITANCE=true

# =====================================================================
# MONITORING AND OBSERVABILITY (future)
# =====================================================================

# Sentry DSN for error tracking (when implemented)
# SENTRY_DSN=https://your-sentry-dsn

# Application metrics endpoint
# METRICS_ENABLED=true
# METRICS_PORT=9090
